<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="eu.crewbase.lineup.web.dutyperiodtemplate.DutyPeriodTemplateBrowse"
        focusComponent="dutyPeriodTemplatesTable"
        lookupComponent="dutyPeriodTemplatesTable"
        messagesPack="eu.crewbase.lineup.web.dutyperiodtemplate">
    <dsContext>
        <collectionDatasource id="dutyPeriodTemplatesDs"
                              class="eu.crewbase.lineup.entity.coredata.DutyPeriodTemplate"
                              view="dutyPeriodTemplate-view">
            <query>
                <![CDATA[select e from lineup$DutyPeriodTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dutyPeriodTemplatesTable"
            spacing="true">
        <table id="dutyPeriodTemplatesTable"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="functionCategory"/>
                <column id="defaultDuration"/>
                <column id="site"/>
            </columns>
            <rows datasource="dutyPeriodTemplatesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="dutyPeriodTemplatesTable.create"/>
                <button id="editBtn"
                        action="dutyPeriodTemplatesTable.edit"/>
                <button id="removeBtn"
                        action="dutyPeriodTemplatesTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
