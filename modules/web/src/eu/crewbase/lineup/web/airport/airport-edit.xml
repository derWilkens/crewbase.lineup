<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="eu.crewbase.lineup.web.airport.AirportEdit"
        datasource="airportDs"
        focusComponent="fieldGroup"
        messagesPack="eu.crewbase.lineup.web.airport">
    <dsContext>
        <datasource id="airportDs"
                    class="eu.crewbase.lineup.entity.coredata.Airport"
                    view="airport-manage"/>
        <collectionDatasource id="categoriesDs"
                              class="eu.crewbase.lineup.entity.coredata.SiteCategory"
                              view="_minimal">
            <query>
                <![CDATA[select e from lineup$SiteCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="airportDs">
            <column width="250px">
                <field property="siteName"/>
                <field property="latitude"/>
                <field property="longitude"/>
                <field property="itemDesignation"/>
                <field optionsDatasource="categoriesDs"
                       property="category"/>
                <field property="icaoCode"/>
                <field property="iataCode"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
