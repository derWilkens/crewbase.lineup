<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="eu.crewbase.lineup.web.site.SiteBrowse"
        focusComponent="table"
        lookupComponent="table"
        messagesPack="eu.crewbase.lineup.web.site">
    <dsContext>
        <datasource id="siteDs"
                    class="eu.crewbase.lineup.entity.coredata.Site"
                    view="site-browser-view"/>
        <collectionDatasource id="sitesDs"
                              class="eu.crewbase.lineup.entity.coredata.Site"
                              view="site-browser-view">
            <query>
                <![CDATA[select e from lineup$Site e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="categoriesDs"
                              class="eu.crewbase.lineup.entity.coredata.SiteCategory"
                              view="_minimal">
            <query>
                <![CDATA[select e from lineup$SiteCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <actions>
        <action id="save"
                caption="mainMsg://actions.Ok"
                icon="icons/ok.png"
                invoke="save"
                shortcut="CTRL-ENTER"/>
        <action id="cancel"
                caption="mainMsg://actions.Cancel"
                description="Esc"
                icon="icons/cancel.png"
                invoke="cancel"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout>
        <split id="split"
               height="100%"
               orientation="horizontal"
               reversePosition="true"
               width="100%">
            <vbox id="lookupBox"
                  height="100%"
                  margin="false,true,false,false"
                  spacing="true">
                <table id="table"
                       height="100%"
                       width="100%">
                    <actions>
                        <action id="create"/>
                        <action id="edit"/>
                        <action id="remove"/>
                    </actions>
                    <columns>
                        <column id="siteName"/>
                        <column id="itemDesignation"/>
                        <column id="category"/>
                        <column id="siteType"/>
                    </columns>
                    <rows datasource="sitesDs"/>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn"
                                action="table.create"/>
                        <button id="editBtn"
                                action="table.edit"/>
                        <button id="removeBtn"
                                action="table.remove"/>
                    </buttonsPanel>
                </table>
            </vbox>
            <vbox id="editBox"
                  expand="fieldGroupBox"
                  height="100%"
                  margin="false,false,false,true"
                  spacing="true">
                <vbox id="fieldGroupBox">
                    <fieldGroup id="fieldGroup"
                                datasource="siteDs">
                        <column width="250px">
                            <field property="siteName"/>
                            <field property="itemDesignation"/>
                            <field optionsDatasource="categoriesDs"
                                   property="category"/>
                            <field property="siteType"/>
                        </column>
                    </fieldGroup>
                </vbox>
                <hbox id="actionsPane"
                      spacing="true"
                      visible="false">
                    <button id="saveBtn"
                            action="save"/>
                    <button id="cancelBtn"
                            action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
