<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="eu.crewbase.lineup.web.site.SiteEdit"
        datasource="siteDs"
        focusComponent="fieldGroup"
        messagesPack="eu.crewbase.lineup.web.site">
    <dsContext>
        <datasource id="siteDs"
                    class="eu.crewbase.lineup.entity.coredata.Site"
                    view="site-browser-view"/>
        <collectionDatasource id="parentSitesDs"
                              class="eu.crewbase.lineup.entity.coredata.Site"
                              view="_minimal">
            <query>
                <![CDATA[select e from lineup$Site e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="categoriesDs"
                              class="eu.crewbase.lineup.entity.coredata.SiteCategory"
                              view="_minimal">
            <query>
                <![CDATA[select e from lineup$SiteCategory e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="siteDs">
            <column width="250px">
                <field property="client"/>
                <field property="siteName"/>
                <field property="itemDesignation"/>
                <field optionsDatasource="parentSitesDs"
                       property="parentSite"/>
                <field property="shortItemDesignation"/>
                <field optionsDatasource="categoriesDs"
                       property="category"/>
                <field property="siteType"/>
                <field property="latitude"/>
                <field property="longitude"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
